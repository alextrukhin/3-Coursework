@{
    ViewData["Title"] = "Suppliers";
}

<div class="text-center">
    <h1 class="display-4">Suppliers</h1>
    <p>Total: @Model.Count.ToString()</p>
    <a class="button" asp-action="Create">+ New</a>
    <form action="" method="get">
        <select name="sort">
            <option value="Id">Id</option>
            <option value="Name">Name</option>
            <option value="LastName">LastName</option>
        </select>
        <input type="submit" class="button" value="Apply">
    </form>
    <table>
        <thead>
            <tr>
                <td>ID</td>
                <td>Name</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
                    <td><a asp-action="View" asp-route-id="@item.Id">@item.Name @item.LastName</a></td>
                    <td>
                        <a class="button button-outline" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="button button-outline" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
        </tr>
    }
        </tbody>
    </table>
</div>
