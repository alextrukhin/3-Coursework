@{
    ViewData["Title"] = "Search";
}

<div class="text-center">
    <h1 class="display-4">Search</h1>
    <form action="" method="get">
        <input value="@Model.Query" name="q" type="text" placeholder="Query" />
        <input type="submit" value="Search" />
    </form>
    <p>Suppliers: @Model.Suppliers.Count.ToString()</p>
    <table>
        <thead>
            <tr>
                <td>ID</td>
                <td>Name</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @if (Model.Suppliers.Count > 0)
            {
                @foreach (var item in Model.Suppliers)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name @item.LastName</td>
                        <td>
                            <a class="button button-outline" asp-area="" asp-controller="Suppliers" asp-action="View" asp-route-id="@item.Id">View</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <p>No suppliers found</p>
            }
        </tbody>
    </table>
    <p>Products: @Model.Products.Count.ToString()</p>
    <table>
        <thead>
            <tr>
                <td>ID</td>
                <td>Name</td>
                <td>In stock</td>
                <td>Price</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @if (Model.Products.Count > 0)
            {
                @foreach (var item in Model.Products)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.InStock</td>
                        <td>@item.Price</td>
                        <td><a class="button button-outline" asp-area="" asp-controller="Products" asp-action="View" asp-route-id="@item.Id">View</a></td>
                    </tr>
                }
            }
            else
            {
                <p>No products found</p>
            }
        </tbody>
    </table>
    
</div>
