@{
    ViewData["Title"] = "Edit category";
}

<div class="text-center">
    <h1 class="display-4">Edit category</h1>
    <form action="" method="post">
        <input name="Id" type="hidden" value="@Model.Category.Id" />
        <p>Name:</p>
        <input name="Name" type="text" placeholder="Name" value="@Model.Category.Name" />
        <p>Fields:</p>
        <select name="Fields" placeholder="Fields" multiple>
            @foreach (var item in Model.Fields)
            {
                <option value="@item" selected="@Model.PreSelectedFields.Contains(item)">@item</option>
            }
        </select>
        <input type="submit" value="Apply" />
    </form>
</div>
